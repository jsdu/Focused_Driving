<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ImageButton
			android:layout_width="match_parent"
			android:layout_height="382dp"
			android:id="@+id/Init"
			android:src="@drawable/initializeicon"
			android:scaleType="fitCenter"
			android:nestedScrollingEnabled="false"
			android:background="#FFF"
			android:padding="15dp"
			android:adjustViewBounds="true"
			android:clickable="true" />

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ToggleButton
                android:layout_width="195dp"
                android:layout_height="195dp"
                android:id="@+id/connect"
                android:scaleType="fitCenter"
                android:background="@drawable/connecticon"
                android:textOff=""
				android:textOn=""
				android:padding="15dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:layout_gravity="right"
				android:animateFirstView="false" />

			<ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/refresh"
                android:src="@drawable/refreshicon"
                android:scaleType="fitCenter"
                android:nestedScrollingEnabled="false"
                android:background="#FFF"
                android:padding="15dp"
                android:adjustViewBounds="true"
                android:clickable="true" />
		</LinearLayout>
	</LinearLayout>

	<Spinner
		android:id="@+id/muses_spinner"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:spinnerMode="dropdown" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="31dp"
		android:textSize="16sp"
		android:text="@string/status" />

	<TextView
		android:id="@+id/con_status"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:textSize="16sp"
		android:text="@string/undefined" />

	<TextView
   		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
		android:textSize="16sp"
    	android:text="@string/accel"
		android:id="@+id/accel" />
    	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="horizontal"
			android:weightSum="1">
	        <TextView
	            android:id="@+id/acc_x"
		        android:layout_width="63dp"
		        android:layout_height="match_parent"
				android:textSize="16sp"
		        android:text="@string/init_val" />

			<TextView
	            android:id="@+id/acc_y"
		        android:layout_width="67dp"
		        android:layout_height="match_parent"
				android:textSize="16sp"
		        android:text="@string/init_val" />
	        <TextView
	            android:id="@+id/acc_z"
		        android:layout_width="72dp"
		        android:layout_height="match_parent"
				android:textSize="16sp"
		        android:text="@string/init_val" />

			<EditText
				android:layout_width="58dp"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:ems="10"
				android:id="@+id/acc_x_init"
				android:text="0.0" />

			<EditText
				android:layout_width="59dp"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:ems="10"
				android:id="@+id/acc_y_init"
				android:text="0.0" />

			<EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/acc_z_init"
				android:layout_weight="1"
				android:text="0.0" />

		</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:text="avgSoFar + avgInit"
		android:id="@+id/textView" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="38dp"
		android:orientation="horizontal" >

		<TextView
			android:id="@+id/avgAlphaInit"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="16sp"
			android:text="@string/init_val" />

		<TextView
			android:id="@+id/avgAlphaSoFar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="16sp"
			android:text="@string/init_val" />

		<TextView
			android:id="@+id/textView4"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="16sp"
			android:text="@string/init_val" />

		<TextView
			android:id="@+id/textView5"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:textSize="16sp"
			android:text="@string/init_val" />
	</LinearLayout>

	<TextView
	   		android:layout_width="match_parent"
	    	android:layout_height="35dp"
		android:textSize="16sp"
	    	android:text="Alpha_Relative:"
			 android:id="@+id/muse_elem" />
   		<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="38dp"
			android:orientation="horizontal" >

			<TextView
                android:id="@+id/aRelative4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/init_val" />

			<TextView
	            android:id="@+id/aRelative1"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:textSize="16sp"
		        android:text="@string/init_val" />
	        <TextView
	            android:id="@+id/aRelative2"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:textSize="16sp"
		        android:text="@string/init_val" />
	        <TextView
	            android:id="@+id/aRelative3"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:textSize="16sp"
		        android:text="@string/init_val" />
		</LinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:textSize="16sp"
		android:text="@string/version" />
	<TextView
		android:id="@+id/version"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:textSize="16sp"
		android:text="@string/undefined" />

</LinearLayout>
</ScrollView>